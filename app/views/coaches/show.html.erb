<div class="container">
  <div class="row">
    <% coach = @coach %>
            <div class="coachItem">
              <div class="coachItemimg ">
                <a href="<%= coach_path(coach) %>">
                  <%= image_tag coach.photo, class: "img-responsive img-thumbnail", size: "150" %>
                  <strong><%= coach.coach_name %></strong>
                </a>
              </div>
              <div class="coachItemContent">
                <p><%= coach.description %></p>
                <p><%= coach.teaching_frame %></p>
                <p><%= coach.contact_email %></p>
                <p><%= coach.contact_phone %></p>
              </div>
            </div>
            <% coach.lessons.each do |lesson| %>
              <div class="coachLesson" id="coachLesson-<%= lesson.id %>">
                <div class="lessontitle col-md-2">
                  <h3>課程資訊</h3>
                  <%= image_tag lesson.photo, class: "img-responsive img-thumbnail", size: "150" %>
                </div>
                <div class="lesson col-md-10">
                  <strong>課程名稱：</strong><p><%= lesson.name %></p>
                  <strong>適合對象：</strong><p><%= lesson.attendance %></p>
                  <strong>課程介紹：</strong><p><%= lesson.content %></p>
                  <strong>價格區間：</strong><p><%= lesson.min_price %> ~ <%= lesson.max_price %> /hr</p>
                  <strong>附註：</strong><p><%= lesson.ps %></p>
                </div>
              </div>
              <div class="clearfix"></div>
            <% end %>

            <div class="clearfix"></div>



            </div>
            <div class="clearfix"></div>

            <div class="coachComment col-sm-10 col-sm-offset-1">
              <div class="commenttitle col-sm-4">
                <!-- <h3>評價</h3> -->

              </div>


              <div class="commentlist col-sm-8">

              <div class="media" id="comment-form">
                <%= form_for [coach, @comment], :remote => true  do |f| %>

                <% if @comment.errors.any? %>
                  <ul>
                    <% @comment.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                <% end %>
                <div class="media-left">
                  <% if current_user %>
                  <%= image_tag(current_user.display_avatar, :class => "media-object", :width => "72", :alt => "user avatar") %>
                  <% else %>
                  <%= image_tag("http://fakeimg.pl/40x40/", :class => "media-object", :width => "72", :alt => "user avatar") %>
                  <% end %>
                </div>
                <div class="media-body">
                  <%= f.text_area :content, :rows => 2, :cols => "30", :class => "form-control", :required => true %>
                  <div class="">

                    <div class="container-rating">
                      幫教練評個分吧！
                      <% (1..5).each do |i| %>
                      <input type="radio" name="comment[rating]" class="rating" value="<%= i %>" required/>
                      <% end %>
                    </div>
                    <p></p>
                    <%= f.submit "Reply...", :class => "btn btn-primary" %>
                  </div>
                </div>
                <% end %>
              </div>
              <div id="comments"></div>
              <% coach.comments.each do |comment| %>
                <% next if comment.new_record? %>
                <%= render :partial => "comments/comment", :locals => { :comment => comment, :coach => coach } %>
              <% end %>
              </div>
            </div>
            <div class="clearfix"></div>
  </div>
</div>
<script>
  $('.container-rating').rating();


</script>