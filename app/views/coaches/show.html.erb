<div class="container">
  <div class="row">
    <% coach = @coach %>
            <div class="coachItem">
              <div class="coachItemimg ">
                <a href="<%= coach_path(coach) %>">
                  <%= image_tag coach.photo, class: "img-responsive img-thumbnail", size: "150" %>
                  <strong><%= coach.coach_name %></strong>
                </a>
              </div>
              <div class="coachItemContent">
                <p><%= coach.description %></p>
                <p><%= coach.teaching_frame %></p>
                <p><%= coach.contact_email %></p>
                <p><%= coach.contact_phone %></p>
              </div>
            </div>
            <% coach.lessons.each do |lesson| %>
              <div class="coachLesson" id="coachLesson-<%= lesson.id %>">
                <div class="lessontitle col-md-2">
                  <h3>課程資訊</h3>
                  <%= image_tag lesson.photo, class: "img-responsive img-thumbnail", size: "150" %>
                </div>
                <div class="lesson col-md-10">
                  <strong>課程名稱：</strong><p><%= lesson.name %></p>
                  <strong>適合對象：</strong><p><%= lesson.attendance %></p>
                  <strong>課程介紹：</strong><p><%= lesson.content %></p>
                  <strong>價格區間：</strong><p><%= lesson.min_price %> ~ <%= lesson.max_price %> /hr</p>
                  <strong>附註：</strong><p><%= lesson.ps %></p>
                </div>
              </div>
              <div class="clearfix"></div>
            <% end %>

            <div class="clearfix"></div>

            <div id="comment-form">
              <%= form_for [coach, @comment] do |f| %>

                <% if @comment.errors.any? %>
                  <ul>
                    <% @comment.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                <% end %>

                <div class="col-sm-8 col-sm-offset-1">
                  <div class="form-group">
                    <div class="col-xs-4">
                      <% if current_user %>
                      <%= image_tag(current_user.display_avatar, :class => "img-thumbnail", :width => "40", :alt => "user avatar") %>
                      <% else %>
                      <%= image_tag("http://fakeimg.pl/40x40/", :class => "img-thumbnail", :width => "40", :alt => "user avatar") %>

                      <% end %>
                    </div>
                    <div class="col-xs-8">
                      <%= f.text_area :content, :rows => 2, :class => "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-sm-2">
                  <div class="form-group">
                    <%= f.submit "Reply...", :class => "btn btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="clearfix"></div>

            <div class="coachComment">
              <div class="commenttitle col-md-2">
                <h3>評價</h3>
              </div>
              <div class="commentlist col-md-10">
                <% coach.comments.each do |comment| %>
                <div class="media" id="comment-<%= comment.id %>">
                  <div class="media-left">
                      <% if comment.user %>
                        <%= image_tag comment.user.display_avatar, :class => "media-object", :width => "64", :alt => "user avatar" %>
                      <% end %>
                  </div>
                  <div class="media-body">
                    <h4 class="media-heading"><%= comment.user.display_name %></h4>
                    <%= simple_format comment.content %>
                    <p class="text-right">
                      <%= comment.created_at.to_s(:short) %>
                      <% if comment.can_delete_by?(current_user) %>
                        <%= link_to "刪除", coach_comment_path(coach, comment), :method => :delete, :remote => true %>
                      <% end %>
                    </p>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
            <div class="clearfix"></div>
  </div>
</div>