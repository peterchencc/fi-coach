<div class="newCoach">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        hi, <%= current_user.name %>
        <% if @coach.errors.any? %>
          <ul>
            <% @coach.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_for @coach do |f| %>

          <div class="form-group">
            <%= f.label :coach_name %>
            <%= f.text_field :coach_name, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :info %>
            <%= f.text_field :info, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, :rows => 15, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :certificate %>
            <%= f.text_field :certificate, :rows => 15, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :teaching_frame %>
            <%= f.text_field :teaching_frame, :rows => 15, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :contact_email %>
            <%= f.text_field :contact_email, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :contact_phone %>
            <%= f.text_field :contact_phone, :class => "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>