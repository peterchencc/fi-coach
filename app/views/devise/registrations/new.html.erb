
<div class="container">
<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
  <%#= image_tag('logo-h60.png' ) %>
<h2>註冊</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">

    <%= f.email_field :email, autofocus: true, :required =>true, :class =>"form-control", :placeholder => "Email address" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :required =>true, :class =>"form-control", :placeholder => "Password"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , :required =>true, :class =>"form-control", :placeholder => "Password" %>
  </div>
  <p></p>
  <div class="actions">
    <%= f.submit "註冊",class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
