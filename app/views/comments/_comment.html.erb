                <div class="media" id="comment-<%= comment.id %>">
                  <div class="media-left">
                      <% if comment.user %>
                        <%= image_tag comment.user.display_avatar, :class => "media-object", :width => "50", :alt => "user avatar" %>
                      <% end %>
                  </div>
                  <div class="media-body">
                    <h4 class="media-heading ">
                      <%= comment.user.display_name %>
                    </h4>
                    <%= simple_format comment.content %>
                    <p class="text-right">
                        <span class="stars">
                          <% x = comment.rating.to_i %>
                          <% (1..x).each do |i| %>
                          <a class="star fullStar"></a>
                          <% end %>
                        </span>
                      <%= comment.created_at.to_s(:short) %>
                      <% if comment.can_delete_by?(current_user) %>
                        <%= link_to "刪除", coach_comment_path(@coach, comment), :method => :delete, :remote => true, data: { confirm: "Are you sure?" }%>
                      <% end %>
                    </p>
                  </div>
                </div>